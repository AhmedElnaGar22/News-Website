@model List<News>

<section id="about" class="about">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="section-title">
            <h2> اخبار @ViewData["Cat"]</h2>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 aos-init aos-animate" data-aos="fade-right">
                    <img src="~/assets/img/about.jpg" class="img-fluid" style="height:300px; width:300px" alt="">
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0 content aos-init aos-animate" data-aos="fade-left">
                    <h3>@item.Title</h3>
                    <h4>@item.Date</h4>
                    <p class="fst-italic">
                        @item.Topic
                    </p>
                    <a class="btn btn-danger" style="align-content:center" href="/Home/DeleteNews/@item.Id">Delete</a>
                </div>
                <hr />
            }
        </div>

    </div>
</section>